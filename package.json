{
  "name": "notula-ai-starter",
  "version": "0.1.0",
  "description": "Starter Electron app for Notula-AI (microphone + system audio capture). Add whisper-node-addon / whisper.cpp integration as described in README.",
  "main": "main.js",
  "scripts": {
    "start": "electron --no-sandbox .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.notula.ai",
    "productName": "Notula AI",
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/ffmpeg",
      "node_modules/ffmpeg-static/ffmpeg.exe"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!server/**",
      "!dist/**",
      "!.git/**",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "author": "Notula AI Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.5",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-audio-loopback": "^1.0.5",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^6.9.1"
  }
}